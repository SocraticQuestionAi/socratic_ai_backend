# ===========================================
# Socratic AI Backend - Environment Variables
# ===========================================

# Application
PROJECT_NAME="Socratic AI"
ENVIRONMENT=local
SECRET_KEY=changethis
API_V1_STR=/api/v1

# CORS (comma-separated origins)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8080"

# Database - PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis
POSTGRES_DB=socratic_ai

# AI Providers
# OpenRouter API (supports multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Google Gemini (direct access)
GOOGLE_API_KEY=your_google_api_key_here

# Default Model Configuration
# Available models via OpenRouter: google/gemini-2.0-flash-exp:free, anthropic/claude-3.5-sonnet, openai/gpt-4o, etc.
DEFAULT_MODEL=google/gemini-2.0-flash-exp:free
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=4096

# First Superuser (created on startup)
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis
